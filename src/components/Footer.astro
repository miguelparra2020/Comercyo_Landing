---
import { SITE } from '~/config/site.config';
---

<footer class="bg-gray-900 text-gray-300 py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Columna 1: Información -->
      <div>
        <h3 class="text-white text-xl font-bold mb-4">{SITE.name}</h3>
        <p class="text-sm mb-4">{SITE.description}</p>
        <p class="text-sm">
          <a href={`mailto:${SITE.author.email}`} class="hover:text-primary-400 transition-colors">
            {SITE.author.email}
          </a>
        </p>
      </div>

      <!-- Columna 2: Enlaces rápidos -->
      <div>
        <h4 class="text-white text-lg font-semibold mb-4">Enlaces Rápidos</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="#servicios" class="hover:text-primary-400 transition-colors">Servicios</a></li>
          <li><a href="#beneficios" class="hover:text-primary-400 transition-colors">Beneficios</a></li>
          <li><a href="#por-que" class="hover:text-primary-400 transition-colors">¿Por qué Comercyo?</a></li>
          <li><a href="#contacto" class="hover:text-primary-400 transition-colors">Contacto</a></li>
        </ul>
      </div>

      <!-- Columna 3: Ciudades -->
      <div>
        <h4 class="text-white text-lg font-semibold mb-4">Cobertura en Colombia</h4>
        <ul class="grid grid-cols-2 gap-2 text-sm">
          {SITE.cities.map((city) => (
            <li class="text-gray-400">{city}</li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8 text-center text-sm">
      <p>© {new Date().getFullYear()} {SITE.name} — Todos los derechos reservados.</p>
      <p class="mt-2 text-gray-500">Desarrollo de Software Personalizado en Colombia</p>
    </div>
  </div>
</footer>
