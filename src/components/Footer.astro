---
import { SITE } from '~/config/site.config';
---

<footer class="bg-[#1C2C36] text-gray-300 py-16 rounded-t-[30px]">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Columna 1: Información -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 bg-white rounded-full"></div>
          <h3 class="text-white text-2xl font-bold">{SITE.name}</h3>
        </div>
        <p class="text-sm mb-6 leading-relaxed">{SITE.description}</p>
        <p class="text-sm">
          <a href={`mailto:${SITE.author.email}`} class="hover:text-[#6A9FC8] transition-colors inline-flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {SITE.author.email}
          </a>
        </p>
      </div>

      <!-- Columna 2: Enlaces rápidos -->
      <div>
        <h4 class="text-white text-lg font-semibold mb-6">Enlaces Rápidos</h4>
        <ul class="space-y-3 text-sm">
          <li><a href="#servicios" class="hover:text-[#6A9FC8] transition-colors">Servicios</a></li>
          <li><a href="#personalizacion" class="hover:text-[#6A9FC8] transition-colors">Soluciones Personalizadas</a></li>
          <li><a href="#por-que" class="hover:text-[#6A9FC8] transition-colors">¿Por qué Comercyo?</a></li>
          <li><button onclick="window.openContactModal()" class="hover:text-[#6A9FC8] transition-colors text-left">Contacto</button></li>
        </ul>
      </div>

      <!-- Columna 3: Ciudades -->
      <div>
        <h4 class="text-white text-lg font-semibold mb-6">Cobertura en Colombia</h4>
        <ul class="grid grid-cols-2 gap-3 text-sm">
          {SITE.cities.map((city) => (
            <li class="text-gray-400">{city}</li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-700/50 pt-8 text-center text-sm">
      <p class="text-gray-400">© {new Date().getFullYear()} {SITE.name} — Todos los derechos reservados.</p>
      <p class="mt-2 text-gray-500">Desarrollo de Software Personalizado en Colombia</p>
    </div>
  </div>
</footer>
