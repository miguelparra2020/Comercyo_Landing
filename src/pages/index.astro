---
import BaseLayout from '~/layouts/BaseLayout.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import { SITE } from '~/config/site.config';
---

<BaseLayout>
  <Header />
  
  <main id="main" class="pt-16">
    <!-- Hero Section -->
    <section class="relative bg-[#1C2C36] py-16 md:py-24 overflow-hidden">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <!-- Logo -->
          <div class="flex items-center justify-center mb-8">
            <div class="w-12 h-12 bg-white rounded-full mr-3"></div>
            <span class="text-white text-2xl font-bold">Comercyo.com</span>
          </div>

          <!-- Hero Content -->
          <div class="text-center mb-12">
            <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
              Desarrollo de Software<br />
              Personalizado para Tu Negocio
            </h1>
            <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-4xl mx-auto leading-relaxed">
              Especializados en E-commerce, ERPs, CRMs y Automatización.<br />
              Transformamos tus procesos empresariales con soluciones tecnológicas a medida, potenciando tu productividad y crecimiento.
            </p>
            
            <div class="flex flex-wrap justify-center gap-4 mb-12">
              <a 
                href="#contacto" 
                class="bg-[#6A9FC8] text-white px-8 py-4 rounded-full hover:bg-[#5A8FB8] transition-all shadow-lg hover:shadow-xl font-semibold text-lg inline-flex items-center gap-2"
              >
                Contáctanos
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Mockup Images -->
          <div class="relative max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
              <!-- Mobile Mockup Left -->
              <div class="flex justify-center md:justify-end">
                <img 
                  src="/images/Mockup_iPhone_Login.png" 
                  alt="Mobile App" 
                  class="w-48 md:w-56 h-auto drop-shadow-2xl"
                />
              </div>
              
              <!-- Desktop Mockup Center -->
              <div class="flex justify-center">
                <img 
                  src="/images/MacBook_Air__2022_.png" 
                  alt="Dashboard Desktop" 
                  class="w-full h-auto drop-shadow-2xl"
                />
              </div>
              
              <!-- Mobile Mockup Right -->
              <div class="flex justify-center md:justify-start">
                <img 
                  src="/images/iPhone_15__1_.png" 
                  alt="Mobile Commerce" 
                  class="w-48 md:w-56 h-auto drop-shadow-2xl"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Media Logos Section -->
      <div class="mt-16 border-t border-gray-700 pt-12">
        <div class="container mx-auto px-4">
          <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-2 md:grid-cols-5 gap-8 items-center justify-items-center opacity-70">
              <img src="/images/techchrunch.png" alt="TechCrunch" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
              <img src="/images/cnbc.png" alt="CNBC" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
              <img src="/images/bloomberg-1.png" alt="Bloomberg" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
              <img src="/images/entrepreneur-2.png" alt="Entrepreneur" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
              <img src="/images/cnn-logo.png" alt="CNN" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Servicios Section -->
    <section id="servicios" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-5xl font-bold text-center mb-4">Nuestros Servicios</h2>
        <p class="text-xl text-gray-600 text-center mb-16 max-w-3xl mx-auto">
          Soluciones tecnológicas diseñadas para impulsar tu negocio
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <article class="bg-gradient-to-br from-blue-50 to-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow">
            <div class="w-16 h-16 bg-primary-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-gray-900">E-commerce</h3>
            <p class="text-gray-700 leading-relaxed">
              Plataformas de comercio electrónico robustas y escalables. Gestión de inventario, pagos seguros, 
              y experiencia de compra optimizada para maximizar tus ventas online.
            </p>
          </article>

          <article class="bg-gradient-to-br from-purple-50 to-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow">
            <div class="w-16 h-16 bg-purple-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-gray-900">ERP</h3>
            <p class="text-gray-700 leading-relaxed">
              Sistemas de planificación de recursos empresariales personalizados. Integra finanzas, inventario, 
              producción y recursos humanos en una sola plataforma eficiente.
            </p>
          </article>

          <article class="bg-gradient-to-br from-green-50 to-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow">
            <div class="w-16 h-16 bg-green-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-gray-900">CRM</h3>
            <p class="text-gray-700 leading-relaxed">
              Gestión de relaciones con clientes optimizada. Seguimiento de leads, automatización de ventas, 
              y análisis de datos para mejorar la retención y satisfacción del cliente.
            </p>
          </article>

          <article class="bg-gradient-to-br from-orange-50 to-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow">
            <div class="w-16 h-16 bg-orange-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-gray-900">Automatización</h3>
            <p class="text-gray-700 leading-relaxed">
              Automatiza procesos repetitivos y optimiza flujos de trabajo. Integración de sistemas, 
              notificaciones automáticas y reportes en tiempo real para mayor eficiencia.
            </p>
          </article>
        </div>
      </div>
    </section>

    <!-- Personalización Section -->
    <section id="personalizacion" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-5xl font-bold text-center mb-4 text-gray-900">Ofrecemos personalización para tus necesidades</h2>
        <p class="text-xl text-gray-600 text-center mb-16 max-w-3xl mx-auto">
          Adaptamos nuestra tecnología a las necesidades específicas de tu negocio
        </p>

        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          <!-- Para Start-Ups -->
          <article class="bg-[#1C2C36] rounded-3xl overflow-hidden shadow-2xl">
            <div class="p-10">
              <h3 class="text-3xl font-bold text-white mb-6">Para Start-Ups</h3>
              <p class="text-gray-300 leading-relaxed mb-8">
                Comercyo.com ayuda a las startups a optimizar la gestión de inventario y automatizar el contenido de productos, 
                permitiéndoles enfocarse en el crecimiento y la innovación. Nuestras soluciones escalables están diseñadas 
                para satisfacer las necesidades dinámicas de las startups.
              </p>
              <a 
                href="#contacto" 
                class="bg-[#6A9FC8] text-white px-6 py-3 rounded-full hover:bg-[#5A8FB8] transition-all font-semibold inline-flex items-center gap-2"
              >
                Contáctanos
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
            <div class="px-10 pb-10">
              <img 
                src="/images/iPhone_15__1_.png" 
                alt="Mobile App for Startups" 
                class="w-full max-w-sm mx-auto h-auto drop-shadow-2xl"
              />
            </div>
          </article>

          <!-- Para Empresas -->
          <article class="bg-[#1C2C36] rounded-3xl overflow-hidden shadow-2xl">
            <div class="p-10">
              <h3 class="text-3xl font-bold text-white mb-6">Para Empresas</h3>
              <p class="text-gray-300 leading-relaxed mb-8">
                Comercyo.com ayuda a las grandes empresas a gestionar inventarios masivos, automatizando el contenido de 
                productos y optimizando la gestión en múltiples plataformas. Nuestras soluciones empresariales están diseñadas 
                para manejar la complejidad y escala de las operaciones empresariales.
              </p>
              <a 
                href="#contacto" 
                class="bg-[#6A9FC8] text-white px-6 py-3 rounded-full hover:bg-[#5A8FB8] transition-all font-semibold inline-flex items-center gap-2"
              >
                Contáctanos
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
            <div class="px-10 pb-10">
              <img 
                src="/images/MacBook_Air__2022_.png" 
                alt="Enterprise Dashboard" 
                class="w-full h-auto drop-shadow-2xl"
              />
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- Por qué Comercyo Section -->
    <section id="por-que" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <p class="text-lg text-gray-600 mb-4">¿Por qué Comercyo.com?</p>
          <h2 class="text-3xl md:text-5xl font-bold mb-6 text-gray-900">
            Creamos soluciones digitales que impulsan tu negocio
          </h2>
          <p class="text-xl text-gray-600 leading-relaxed">
            Desarrollamos plataformas de e-commerce, sistemas ERP y CRM personalizados, junto con soluciones de automatización que 
            escalan tu negocio. Nuestras soluciones están construidas con tecnologías seguras y modernas, optimizadas para alto 
            rendimiento, escalabilidad ilimitada y velocidad excepcional. Trabajamos con arquitecturas multiplataforma que se adaptan 
            perfectamente a tus necesidades, garantizando que tu negocio esté siempre un paso adelante de la competencia.
          </p>
        </div>

        <div class="max-w-4xl mx-auto mb-16 text-center">
          <a 
            href="#contacto" 
            class="bg-[#6A9FC8] text-white px-8 py-4 rounded-full hover:bg-[#5A8FB8] transition-all shadow-lg hover:shadow-xl font-semibold text-lg inline-flex items-center gap-2"
          >
            Contáctanos
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>

        <!-- Features Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
          <div class="bg-white p-6 rounded-xl border border-gray-200 hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-blue-50 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">E-commerce Potente</h3>
            <p class="text-gray-600">
              Tiendas online escalables con integración de pagos, gestión de inventario y experiencia de usuario optimizada
            </p>
          </div>

          <div class="bg-white p-6 rounded-xl border border-gray-200 hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-purple-50 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">ERP & CRM Personalizados</h3>
            <p class="text-gray-600">
              Sistemas integrados que automatizan procesos, gestionan relaciones con clientes y optimizan operaciones
            </p>
          </div>

          <div class="bg-white p-6 rounded-xl border border-gray-200 hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-green-50 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">Seguridad & SEO</h3>
            <p class="text-gray-600">
              Tecnologías seguras con encriptación avanzada y optimización SEO para máxima visibilidad en buscadores
            </p>
          </div>

          <div class="bg-white p-6 rounded-xl border border-gray-200 hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-orange-50 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">Alto Rendimiento</h3>
            <p class="text-gray-600">
              Arquitecturas multiplataforma con velocidad excepcional y escalabilidad ilimitada para crecer sin límites
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contacto Section -->
    <section id="contacto" class="py-20 bg-gradient-to-br from-primary-50 to-purple-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-5xl font-bold text-center mb-4">Comienza Tu Transformación Digital</h2>
          <p class="text-xl text-gray-700 text-center mb-12">
            Contáctanos hoy y descubre cómo podemos impulsar tu negocio
          </p>

          <div class="bg-white rounded-2xl shadow-2xl p-10">
            <form class="space-y-6" action="#" method="POST">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="nombre" class="block text-sm font-semibold text-gray-700 mb-2">Nombre Completo</label>
                  <input 
                    type="text" 
                    id="nombre" 
                    name="nombre" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
                    placeholder="Tu nombre"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
                    placeholder="tu@email.com"
                  />
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="empresa" class="block text-sm font-semibold text-gray-700 mb-2">Empresa</label>
                  <input 
                    type="text" 
                    id="empresa" 
                    name="empresa"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
                    placeholder="Nombre de tu empresa"
                  />
                </div>
                <div>
                  <label for="servicio" class="block text-sm font-semibold text-gray-700 mb-2">Servicio de Interés</label>
                  <select 
                    id="servicio" 
                    name="servicio"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
                  >
                    <option value="">Selecciona un servicio</option>
                    <option value="ecommerce">E-commerce</option>
                    <option value="erp">ERP</option>
                    <option value="crm">CRM</option>
                    <option value="automatizacion">Automatización</option>
                    <option value="otro">Otro</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="mensaje" class="block text-sm font-semibold text-gray-700 mb-2">Mensaje</label>
                <textarea 
                  id="mensaje" 
                  name="mensaje" 
                  rows="5"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all resize-none"
                  placeholder="Cuéntanos sobre tu proyecto..."
                ></textarea>
              </div>

              <button 
                type="submit"
                class="w-full bg-primary-600 text-white px-8 py-4 rounded-lg hover:bg-primary-700 transition-all shadow-lg hover:shadow-xl font-semibold text-lg"
              >
                Enviar Mensaje
              </button>
            </form>

            <div class="mt-8 pt-8 border-t border-gray-200 text-center">
              <p class="text-gray-700 mb-4">O contáctanos directamente:</p>
              <a href={`mailto:${SITE.author.email}`} class="text-primary-600 hover:text-primary-700 font-semibold text-lg">
                {SITE.author.email}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
