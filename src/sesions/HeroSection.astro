---
// Hero Section Component
---

<!-- Hero Section -->
<section class="relative bg-[#1C2C36] py-16 md:py-24 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <!-- Logo -->
      <div class="flex items-center justify-center mb-8">
        <div class="w-12 h-12 bg-white rounded-full mr-3"></div>
        <span class="text-white text-2xl font-bold">Comercyo.com</span>
      </div>

      <!-- Hero Content -->
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          Desarrollo de Software<br />
          Personalizado para Tu Negocio
        </h1>
        <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-4xl mx-auto leading-relaxed">
          Especializados en E-commerce, ERPs, CRMs y Automatización.<br />
          Transformamos tus procesos empresariales con soluciones tecnológicas a medida, potenciando tu productividad y crecimiento.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <a 
            href="#contacto" 
            class="bg-[#6A9FC8] text-white px-8 py-4 rounded-full hover:bg-[#5A8FB8] transition-all shadow-lg hover:shadow-xl font-semibold text-lg inline-flex items-center gap-2"
          >
            Contáctanos
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Mockup Images -->
      <div class="relative max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
          <!-- Mobile Mockup Left -->
          <div class="flex justify-center md:justify-end">
            <img 
              src="/images/Mockup_iPhone_Login.png" 
              alt="Mobile App" 
              class="w-48 md:w-56 h-auto drop-shadow-2xl"
            />
          </div>
          
          <!-- Desktop Mockup Center -->
          <div class="flex justify-center">
            <img 
              src="/images/MacBook_Air__2022_.png" 
              alt="Dashboard Desktop" 
              class="w-full h-auto drop-shadow-2xl"
            />
          </div>
          
          <!-- Mobile Mockup Right -->
          <div class="flex justify-center md:justify-start">
            <img 
              src="/images/iPhone_15__1_.png" 
              alt="Mobile Commerce" 
              class="w-48 md:w-56 h-auto drop-shadow-2xl"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Media Logos Section -->
  <div class="mt-16 border-t border-gray-700 pt-12">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-5 gap-8 items-center justify-items-center opacity-70">
          <img src="/images/techchrunch.png" alt="TechCrunch" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/cnbc.png" alt="CNBC" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/bloomberg-1.png" alt="Bloomberg" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/entrepreneur-2.png" alt="Entrepreneur" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/cnn-logo.png" alt="CNN" class="h-8 md:h-10 w-auto grayscale hover:grayscale-0 transition-all" />
        </div>
      </div>
    </div>
  </div>
</section>
